@model IEnumerable<Booking.Business.HotelService.Hotels>

@{
    ViewBag.Title = "Hoteles";
}

<div class="block-30 block-30-sm item" style="background-image: url('Content/custom/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-10">
                <span class="subheading-sm">Hoteles</span>
                <h2 class="heading">Guía de Hoteles</h2>
            </div>
        </div>
    </div>
</div>

<div class="site-section block-13 bg-light">
    <div class="container">
        
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-13 owl-carousel">

                    @foreach (var hotel in Model)
                    {
                        <div class="item">
                            <div class="block-34">
                                <div class="image">
                                    <!--<a href="#"><img src="http://localhost:61740/Images/@hotel.CodigoImagen" alt="Image placeholder" width="100" height="200"></a>-->
                                    <a href="#"><img src="http://localhost:85/Images/@hotel.CodigoImagen" alt="Image placeholder" width="100" height="200"></a>
                                </div>
                                <div class="text">
                                    <h2 class="heading">@hotel.Nombre</h2>
                                    <p class="">@hotel.Descripcion</p>
                                    <ul class="specs">
                                        <li><strong>Dirección:</strong> @hotel.Direccion</li>
                                        <li><strong>Teléfono:</strong> @hotel.Telefono</li>
                                        <li><strong>Estrellas:</strong> @hotel.Estrellas</li>
                                    </ul>
                                    <a href="@Url.Action("Index", "Habitacion", new { hotelCodigo = hotel.Codigo})" class="btn btn-primary btn-block">Ver Habitaciones</a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>