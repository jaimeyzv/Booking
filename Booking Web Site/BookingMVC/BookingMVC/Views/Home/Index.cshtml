@model BookingModels.BusquedaHome

@{
    ViewBag.Title = "Index";
}

<div class="block-31" style="position: relative;">
    <div class="owl-carousel loop-block-31 ">
        <div class="block-30 item" style="background-image: url('Content/custom/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-10">
                        @if (Session["Miembro"] == null)
                        {
                            <span class="subheading-sm">Regístrate o Inicia Sesión para comenzar.</span>
                        }
                        else
                        {
                            <span class="subheading-sm">Bienvenido</span>
                        }
                        <h2 class="heading">Booking DSD</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-30 item" style="background-image: url('Content/custom/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-10">
                        @if (Session["Miembro"] == null)
                        {
                            <span class="subheading-sm">Regístrate o Inicia Sesión para comenzar.</span>
                        }
                        else
                        {
                            <span class="subheading-sm">Bienvenido</span>
                        }
                        <h2 class="heading">Booking DSD</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="block-30 item" style="background-image: url('Content/custom/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-10">
                        @if (Session["Miembro"] == null)
                        {
                            <span class="subheading-sm">Regístrate o Inicia Sesión para comenzar.</span>
                        }
                        else
                        {
                            <span class="subheading-sm">Bienvenido</span>
                        }
                        <h2 class="heading">Booking DSD</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Session["Miembro"] != null)
{
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <div class="block-32">
                    <form action="#">
                        <div class="row">
                           
                            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                            {
                                
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="col-md-6 mb-3 mb-lg-0 col-lg-3">
                                    @Html.LabelFor(model => model.CheckIn, htmlAttributes: new { @class = "checkin" })
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="icon-calendar"></span></div>
                                        @Html.EditorFor(model => model.CheckIn, new { htmlAttributes = new { @class = "form-control", @id = "checkin_date" } })
                                        @Html.ValidationMessageFor(model => model.CheckIn, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3 mb-lg-0 col-lg-3">
                                    @Html.LabelFor(model => model.CheckOut, htmlAttributes: new { @class = "checkin" })
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="icon-calendar"></span></div>
                                        @Html.EditorFor(model => model.CheckOut, new { htmlAttributes = new { @class = "form-control", @id = "checkin_date" } })
                                        @Html.ValidationMessageFor(model => model.CheckOut, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-1">

                                    @Html.LabelFor(model => model.Camas, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.Camas, new { htmlAttributes = new { @class = "form-control", @id = "" } })
                                    @Html.ValidationMessageFor(model => model.Camas, "", new { @class = "text-danger" })

                                </div>
                                <div class="col-md-6 col-lg-2 align-self-end">
                                    @*<a href="@Url.Action("Index", "Hotel", null)" class="btn btn-primary btn-block">Buscar</a>*@
                                    <input type="submit" value="Buscar" class="btn btn-primary btn-block" />
                                </div>
                            }

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}